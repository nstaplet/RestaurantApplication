@{
    ViewBag.Title = "Add a Restaurant";
}
@model RestaurantApplication.Models.Restaurant

<h1>Add a Restaurant!</h1>

<form asp-action="AddRestaurant" method="post">
    <div>
        <label>Name</label>
        <input />
    </div>
    <div>
        <label asp-for="RestaurantName">Catagory</label>
        <input asp-for="RestaurantName" />
    </div>
    <div>
        <label asp-for="FavoriteDish">Year</label>
        <input asp-for="FavoriteDish" />
    </div>
    <div>
        <label asp-for="RestaurantPhone">Director</label>
        <input asp-for="RestaurantPhone" />
    </div>

    <button type='submit'>Submit Restaurant</button>
</form>